
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to BV-test-up</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                    alt="">
                <form class="form-signin" {{action 'authenticate' on='submit'}}>

                    {{input value=email placeholder='Email' class='form-control' type='email' required='required' 	autofocus='autofocus'}}
                    {{input value=password placeholder='Password' class='form-control' type='password' required='required'}}
                    <button id="btn-test" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </form>
            </div>
            {{#link-to 'signin' class="text-center new-account"}}
                Create an account
            {{/link-to}}
            
        </div>
    </div>
</div>

{{outlet}}