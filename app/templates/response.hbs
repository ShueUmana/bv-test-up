<div class="site-wrapper">
    <div class="site-wrapper-inner">
        <div class="cover-container2">
            <div class="inner cover bg-cover">
                <h1 class="cover-heading">Response Data</h1>
                <p class="lead">Here is your data, that's all?</p>
                {{#bs-accordion as |acc|}} {{#acc.item value=1 title="Email adresses"}}
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Type</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each model.emails as |row|}}
                        <tr>
                            <td>{{row.email_address}}</td>
                            <td>{{row.type}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/acc.item}} {{#acc.item value=2 title="Names"}}

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Full name</th>
                            <th scope="col">First name</th>
                            <th scope="col">Last name</th>
                            <th scope="col">Middle name</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each model.names as |row|}}
                        <tr>
                            <td> {{row.full}}</td>
                            <td>{{row.parts.first_name}}</td>
                            <td> {{row.parts.last_name}}</td>
                            <td> {{row.parts.middle_name}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/acc.item}} {{#acc.item value=3 title="Social"}}
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                            <th scope="col">Link</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each model.social as |row|}}
                        <tr>
                            <td> {{row.type}}</td>
                            <td>
                                <a target="new" href="{{row.url}}">{{row.url}}</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/acc.item}} {{#acc.item value=4 title="Jobs"}}
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Company</th>
                            <th scope="col">Title</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each model.jobs as |row|}}
                        <tr>
                            <td> {{row.company}}</td>
                            <td>{{row.title}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>


                {{/acc.item}} {{/bs-accordion}}
            </div>
        </div>
    </div>
</div>
{{outlet}}